# ========================================
# VMS Application Environment Configuration
# ========================================
# Copy this file to .env and update the values as needed
# DO NOT commit .env file to version control

# ========================================
# API Configuration
# ========================================
# Your VMS API base URL (without trailing slash)
VITE_API_BASE_URL=http://13.200.229.29:5000

# API timeout in milliseconds (10 seconds)
VITE_API_TIMEOUT=10000

# Cache TTL in milliseconds (5 minutes)
VITE_CACHE_TTL=300000

# ========================================
# Application Configuration  
# ========================================
# Environment: development, staging, production
VITE_ENVIRONMENT=development

# Application version
VITE_VERSION=1.0.0

# Application name
VITE_APP_NAME=VMS HQ Light Theme

# ========================================
# Feature Flags
# ========================================
# Enable/disable search functionality
VITE_ENABLE_SEARCH=true

# Enable/disable pagination
VITE_ENABLE_PAGINATION=true

# Enable/disable API caching
VITE_ENABLE_CACHING=true

# Enable/disable debug mode
VITE_DEBUG_MODE=false

# Enable/disable toast notifications
VITE_ENABLE_NOTIFICATIONS=true

# ========================================
# Performance Configuration
# ========================================
# Number of items per page for pagination
VITE_DEFAULT_PAGE_SIZE=16

# Maximum number of retry attempts for failed API calls
VITE_MAX_RETRY_ATTEMPTS=3

# Retry delay in milliseconds
VITE_RETRY_DELAY=1000

# ========================================
# Development Only (will be ignored in production)
# ========================================
# Enable React dev tools
VITE_DEV_TOOLS=true

# Enable console logging
VITE_CONSOLE_LOGGING=true

# Mock API responses (useful for development)
VITE_MOCK_API=false

# ========================================
# Future API Endpoints (for reference)
# ========================================
# When you add more services, you can add their base URLs here
# VITE_AUTH_API_URL=http://13.200.229.29:5001
# VITE_NOTIFICATION_API_URL=http://13.200.229.29:5002
# VITE_ANALYTICS_API_URL=http://13.200.229.29:5003

# ========================================
# Security (Future)
# ========================================
# API key for authentication (when implemented)
# VITE_API_KEY=your_api_key_here

# JWT secret (when auth is implemented)
# VITE_JWT_SECRET=your_jwt_secret_here

# ========================================
# Third-party Services (Future)
# ========================================
# Google Analytics tracking ID
# VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry DSN for error tracking
# VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
